<%= form_tag("/customers", method: :post, html: { class: 'form-horizontal' }) do %>
  
  <div class="control-group">
    <%= label_tag "name" %>
    <div class="controls">
      <%= text_field_tag "name" %>
    </div>
  </div>

  <div class="control-group">
    <%= label_tag "email" %>
    <div class="controls">
      <%= text_field_tag "email" %>
    </div>
  </div>

  <div class="control-group">
    <%= label_tag "registry_code" %>
    <div class="controls">
      <%= text_field_tag "registry_code" %>
    </div>
  </div>

  <div class="control-group controls">
    <%= submit_tag "Create Customer" %>
  </div>
  <% end %>
